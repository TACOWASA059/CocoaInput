{
  "schemaVersion": 1,
  "id": "cocoainput",
  "version": "${version}",

  "name": "CocoaInput",
  "description": "Support IME - Input Method Editor(Japanese,Chinese,Korean) in Minecraft on Multi-platforms(macOS, Windows, X11).",
  "authors": [
    "Axeryok"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/cocoainput",
    "sources": "https://github.com/Axeryok/CocoaInput"
  },

  "license": "MMPLJ",
  "icon": "assets/cocoainput/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "jp.axer.cocoainput.loader.FabricLoader"
    ],
    "modmenu":[
      "jp.axer.cocoainput.loader.CocoaInputModMenu"
    ]
  },

  "depends": {
    "fabricloader": ">=0.14.21",
    "minecraft": ">=1.20-rc.1",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  "accessWidener":"cocoainput.accesswidener",
"mixins": [
    "cocoainput.mixins.json",
    "cocoafab.mixins.json"
  ]
}
